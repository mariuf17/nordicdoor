@model Roller

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Opprett Rolle</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Rolle_ID"></label>
            <input asp-for="Rolle_ID" inputmode="numeric" class="form-control" />
            <span asp-validation-for="Rolle_ID" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Bruker_ID"></label>
            <input asp-for="Bruker_ID" inputmode="numeric" class="form-control" />
            <span asp-validation-for="Bruker_ID" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Rolle"></label>
            @Html.DropDownListFor(r => r.Rolle, new SelectList(Enum.GetValues(typeof(Rolletype))), "Velg Rolle")
            <span asp-validation-for="Rolle" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Opprett Bruker</button>
        <a asp-controller="Bruker" asp-action="Index" class="btn btn-secondary" style="width:160px">
            Tilbake til oversikt
        </a>
    </div>
</form>

@section Scripts{
    @{
         <partial name="_ValidationScriptsPartial" />
     }
}
