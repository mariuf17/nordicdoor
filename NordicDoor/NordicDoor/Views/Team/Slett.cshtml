@model Team

<form method="post" asp-action="SlettPOST">
    <input asp-for="Team_ID" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Slett Team</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Team_ID"></label>
            <input asp-for="Team_ID" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Avdeling_ID"></label>
            <input asp-for="Avdeling_ID" disabled class="form-control" />
            <div class="mb-3">
                <label asp-for="Teamnavn"></label>
                <input asp-for="Teamnavn" class="form-control" />
                <span asp-validation-for="Teamnavn" disabled class="text-danger"></span>
            </div>
           
            <button type="submit" class="btn btn-danger" style="width:150px">Slett Team</button>
            <a asp-controller="Team" asp-action="Index" class="btn btn-secondary" style="width:160px">
                Tilbake til oversikt
            </a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


