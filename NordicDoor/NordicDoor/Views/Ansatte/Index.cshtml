@using WebMatrix.Data;
@using NordicDoor.Controllers.Data;
@using Microsoft.Extensions.Configuration;
@inject IConfiguration Configuration; 

@{
    ViewData["Title"] = "Index";

    var db = Database.Open(Configuration["first"]);
    var selectQueryString = "SELECT Forslag_ID, FStatus FROM Forslag_Status";
}

<html>
<body>
    <h1>Status</h1>
    <table>
        <tr>
            <th>Id</th>
            <th>Product</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
        @foreach (var row in db.Query(selectQueryString))
        {
            <tr>
                <td>@row.Forslag_ID</td>
                <td>@row.FStatus</td>
            </tr>

        }
    </table>
</body>
</html>
