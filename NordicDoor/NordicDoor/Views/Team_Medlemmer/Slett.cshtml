@model Team_Medlemmer

<form method="post" asp-action="SlettPOST">
    <input asp-for="Team_ID" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Slett Teammedlem</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Team_ID"></label>
            <input asp-for="Team_ID" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Ansatt_ID"></label>
            <input asp-for="Ansatt_ID" disabled class="form-control" />
            

            <button type="submit" class="btn btn-danger" style="width:150px">Slett Teammedlem</button>
            <a asp-controller="Team_Medlemmer" asp-action="Index" class="btn btn-secondary" style="width:160px">
                Tilbake til oversikt
            </a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

